extends layout

block content
  .container
    .row
      .col-md-6.col-md-offset-3
        h1= title
        h2= message
        br
        form(role='form', action="/login", method="post", style='max-width: 300px; margin: 0 auto;')
          .form-group
            label(for='username') Username
            input.form-control(type='text', name='username', id='username', placeholder='Enter Username')
          .form-group
            label(for='password') Password
            input.form-control(type='password', name='password', id='password', placeholder='Password')
          button.btn.btn-default(type='submit') Submit
          a(href='/')
            button.btn.btn-primary(type='button') Cancel
